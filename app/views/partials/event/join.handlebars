<div class="container mt-5 bg-light pb-5">
  <div class="row">
    <div class="col-12 mb-5">
      <h1 class="h2 text-center mt-5 mb-2">{{config.title}}</h1>
    </div>
  </div>
  {{#each events}}
    <div class="row">
      <div class="col-12 my-3 px-5">
        <a href="/{{../config.link}}/event/{{this.id}}/add" class="btn btn-outline-primary btn-sm mr-2">Choisir</a><span class="font-weight-bold">{{this.name}}</span> <small class="text-muted">{{getDay this.date_start}}-{{getMonth this.date_start}}-{{getYear this.date_start}}</small>
        
      </div>
    </div>
  {{/each}}
</div>
<div class="container my-5">
  <div class="row">
    <div class="col-12 text-center">
      <span class="d-block mb-5 h4">{{config.section}}</span>
      <a class="btn btn-primary" href="/event/add">Créer un événement</a>
    </div>
  </div>  
</div>